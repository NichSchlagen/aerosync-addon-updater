{
  "name": "aerosync-addon-updater",
  "version": "1.2.0",
  "description": "Desktop updater for X-Plane aircraft using the X-Updater service with multi-profile management",
  "main": "main.js",
  "private": true,
  "author": "Tim Rosenhagen",
  "scripts": {
    "start": "electron .",
    "start:linux": "env -u ELECTRON_RUN_AS_NODE electron .",
    "pack": "electron-builder --dir",
    "build:appimage": "electron-builder --linux AppImage",
    "build:win": "npm run build:win:setup && npm run build:win:portable",
    "build:win:setup": "electron-builder --win nsis --config.artifactName=\"${productName}-${version}-${arch}-setup.${ext}\"",
    "build:win:portable": "electron-builder --win portable --config.artifactName=\"${productName}-${version}-${arch}-portable.${ext}\""
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.aerosync.addonupdater",
    "productName": "AeroSync Addon Updater",
    "files": [
      "main.js",
      "preload.js",
      "lib/**/*",
      "src/**/*",
      "languages/**/*",
      "package.json",
      "build/icons/**/*"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "build/icons/icon.png"
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "extraResources": [
      {
        "from": "languages",
        "to": "languages",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/icons",
        "to": "build/icons",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icons/icon.ico"
    }
  }
}
