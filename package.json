{
  "name": "aerosync-addon-updater",
  "version": "2.0.2",
  "description": "Desktop updater for X-Plane aircraft using the X-Updater service with multi-profile management",
  "main": "main.js",
  "private": true,
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "author": {
    "name": "Tim Rosenhagen",
    "email": "49558999+NichSchlagen@users.noreply.github.com"
  },
  "scripts": {
    "start": "electron .",
    "start:linux": "env -u ELECTRON_RUN_AS_NODE electron .",
    "pack": "electron-builder --dir",
    "build:appimage": "electron-builder --linux AppImage",
    "build:win": "npm run build:win:setup && npm run build:win:portable",
    "build:win:setup": "electron-builder --win nsis",
    "build:win:portable": "electron-builder --win portable",
    "build:deb": "electron-builder --linux deb",
    "build:rpm": "electron-builder --linux rpm",
    "build:linux": "npm run build:appimage && npm run build:deb && npm run build:rpm"
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.8.1"
  },
  "build": {
    "appId": "com.aerosync.addonupdater",
    "productName": "AeroSync Addon Updater",
    "files": [
      "main.js",
      "preload.js",
      "lib/**/*",
      "src/**/*",
      "languages/**/*",
      "package.json",
      "build/icons/**/*"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "build/icons/icon.png",
      "maintainer": "Tim Rosenhagen <49558999+NichSchlagen@users.noreply.github.com>"
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "extraResources": [
      {
        "from": "languages",
        "to": "languages",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/icons",
        "to": "build/icons",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "artifactName": "${productName}-${version}-${arch}-setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-${arch}-portable.${ext}"
    }
  }
}
